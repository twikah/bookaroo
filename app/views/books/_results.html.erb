<div class="row justify-content-center mt-5">
  <% if @books %>
    <% @books.results.work.each do |book| %>
      <div class="book-card text-center col-12 col-sm-4 col-md-3 col-lg-2 mx-lg-2">
        <div class="content mx-auto" style="background-image: url(<%= book.best_book.image_url %>)">
          <div class="content-details">
            <%= link_to "Add to books", dashboard_books_path, class: 'content-text' %>
          </div>
        </div>
        <h6><%= book.best_book.title %></h6>
        <p><em>by</em> <%= book.best_book.author.name %></p>
      </div>
    <% end %>
  <% end %>
</div>
